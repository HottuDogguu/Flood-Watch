<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background2"
    android:padding="16dp">

    <!-- Logo Container -->
    <RelativeLayout
        android:id="@+id/logoContainer"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp">

        <!-- Outer Ring -->
        <ImageView
            android:id="@+id/outerRing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ring_outer" />

        <!-- Middle Ring -->
        <ImageView
            android:id="@+id/middleRing"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ring_middle" />

        <!-- Logo Image -->
        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_centerInParent="true"
            android:src="@drawable/fw_logo"
            android:contentDescription="@string/app_logo" />
    </RelativeLayout>

    <!-- App Name -->
    <LinearLayout
        android:id="@+id/appNameContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logoContainer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/floodText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Flood"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="#4A90E2"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:id="@+id/watchText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Watch"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="#D3D3D3"
            android:fontFamily="sans-serif-medium" />
    </LinearLayout>

    <!-- Tagline -->
    <TextView
        android:id="@+id/tagline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/appNameContainer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="STAY ALERT. STAY SAFE."
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="#FFC107"
        android:letterSpacing="0.1" />

    <!-- Loading Text -->
    <TextView
        android:id="@+id/loadingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tagline"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Loading weather data..."
        android:textSize="16sp"
        android:textColor="#B3FFFFFF" />

    <!-- Animated Dots Container -->
    <LinearLayout
        android:id="@+id/dotsContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/loadingText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <View
            android:id="@+id/dot1"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_margin="4dp"
            android:background="@drawable/dot_blue" />

        <View
            android:id="@+id/dot2"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_margin="4dp"
            android:background="@drawable/dot_yellow" />

        <View
            android:id="@+id/dot3"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_margin="4dp"
            android:background="@drawable/dot_blue" />
    </LinearLayout>

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="250dp"
        android:layout_height="6dp"
        android:layout_below="@id/dotsContainer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:indeterminate="true"
        android:progressDrawable="@drawable/progress_gradient" />

</RelativeLayout>