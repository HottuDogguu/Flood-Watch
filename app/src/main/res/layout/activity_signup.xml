<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/signupScrollView"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#F3F4F6"

    tools:context=".activities.SignupActivity"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Logo Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/flood_watch"
                android:contentDescription="Flood Watch Logo"
                android:scaleType="fitCenter"/>
        </LinearLayout>

        <!-- Welcome Text -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Account"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#1F2937"
            android:gravity="center"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign up to start monitoring flood alerts"
            android:textSize="12sp"
            android:textColor="#6B7280"
            android:gravity="center"
            android:layout_marginBottom="24dp"/>

        <!-- Full Name -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Full Name"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#1F2937"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilFullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeColor="@color/blue_500"
            app:boxStrokeErrorColor="@color/red_500"
            app:hintEnabled="false"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etFullName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter your full name"
                android:inputType="textPersonName"
                android:textSize="14sp"
                android:textColor="#1F2937"
                android:textColorHint="#9CA3AF"
                android:padding="14dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Email -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email Address"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#1F2937"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeColor="@color/blue_500"
            app:hintEnabled="false"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter your email"
                android:inputType="textEmailAddress"
                android:textSize="14sp"
                android:textColor="#1F2937"
                android:textColorHint="#9CA3AF"
                android:padding="14dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Contact Number -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact Number"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#1F2937"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilContactNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeColor="@color/blue_500"
            app:hintEnabled="false"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etContactNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="09123456789"
                android:inputType="phone"
                android:textSize="14sp"
                android:textColor="#1F2937"
                android:textColorHint="#9CA3AF"
                android:padding="14dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Secondary Number -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Secondary Number (Optional)"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#1F2937"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilSecondaryNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeColor="@color/blue_500"
            app:hintEnabled="false"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etSecondaryNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="09123456789"
                android:inputType="phone"
                android:textSize="14sp"
                android:textColor="#1F2937"
                android:textColorHint="#9CA3AF"
                android:padding="14dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Address Section Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Home Address"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#1F2937"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"/>

        <!-- Street/Purok -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Street/Purok"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#374151"
            android:layout_marginBottom="6dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilStreet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:boxStrokeColor="@color/blue_500"
            app:hintEnabled="false"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etStreet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="e.g., Purok 1, Main Street"
                android:inputType="textPostalAddress"
                android:textSize="14sp"
                android:padding="12dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Barangay -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Barangay"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#374151"
            android:layout_marginBottom="6dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilBarangay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:boxStrokeColor="@color/blue_500"
            app:hintEnabled="false"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etBarangay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter barangay"
                android:inputType="text"
                android:textSize="14sp"
                android:padding="12dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- City -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="City"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#374151"
            android:layout_marginBottom="6dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:boxStrokeColor="@color/blue_500"
            app:hintEnabled="false"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter city"
                android:inputType="text"
                android:textSize="14sp"
                android:padding="12dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Province -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Province"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#374151"
            android:layout_marginBottom="6dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilProvince"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:boxStrokeColor="@color/blue_500"
            app:hintEnabled="false"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etProvince"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter province"
                android:inputType="text"
                android:textSize="14sp"
                android:padding="12dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Password -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#374151"
            android:layout_marginBottom="6dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:boxStrokeColor="@color/blue_500"
            app:hintEnabled="false"
            app:errorEnabled="true"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter your password"
                android:inputType="textPassword"
                android:textSize="14sp"
                android:padding="12dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Confirm Password -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm Password"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#374151"
            android:layout_marginBottom="6dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:boxStrokeColor="@color/blue_500"
            app:hintEnabled="false"
            app:errorEnabled="true"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Re-enter your password"
                android:inputType="textPassword"
                android:textSize="14sp"
                android:padding="12dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Terms and Conditions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp">

            <CheckBox
                android:id="@+id/cbAgreeTerms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12sp"
                android:textColor="#4B5563"
                android:text="I agree to the Terms and Conditions and Privacy Policy"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvTermsError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#EF4444"
            android:textSize="10sp"
            android:visibility="gone"
            android:layout_marginTop="-12dp"
            android:layout_marginBottom="12dp"/>

        <!-- Sign Up Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnManualSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SIGN UP"
            android:textSize="14sp"
            android:textStyle="bold"
            android:padding="12dp"
            app:backgroundTint="#3B82F6"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"/>

        <!-- Divider -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginVertical="16dp">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#D1D5DB"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="or"
                android:textSize="12sp"
                android:textColor="#6B7280"
                android:paddingHorizontal="12dp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#D1D5DB"/>
        </LinearLayout>

        <!-- Google Sign Up -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGoogleSignUp"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Continue with Google"
            android:textSize="16sp"
            android:textColor="#424242"
            android:textAllCaps="false"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:strokeColor="#E0E0E0"
            app:strokeWidth="1dp"
            app:cornerRadius="12dp"
            app:icon="@drawable/google_icon"
            app:iconTint="@null"
            app:iconGravity="start"
            app:iconPadding="12dp"
            app:iconSize="24dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginBottom="20dp"/>

        <!-- Sign In Link -->
        <TextView
            android:id="@+id/tvSignIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Already have an account? Sign In"
            android:textSize="12sp"
            android:textColor="#6B7280"
            android:gravity="center"
            android:layout_marginBottom="24dp"/>

    </LinearLayout>
</ScrollView>