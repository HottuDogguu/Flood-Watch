        <!-- Terms and Conditions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp">

            <CheckBox
                android:id="@+id/cbAgreeTerms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12sp"
                android:textColor="#4B5563"
                android:text="I agree to the Terms and Conditions and Privacy Policy"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvTermsError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#EF4444"
            android:textSize="10sp"
            android:visibility="gone"
            android:layout_marginTop="-12dp"
            android:layout_marginBottom="12dp"/>

        <!-- Sign Up Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnManualSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SIGN UP"
            android:textSize="14sp"
            android:textStyle="bold"
            android:padding="12dp"
            app:backgroundTint="#3B82F6"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"/>

        <!-- Divider -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginVertical="16dp">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#D1D5DB"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="or"
                android:textSize="12sp"
                android:textColor="#6B7280"
                android:paddingHorizontal="12dp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#D1D5DB"/>
        </LinearLayout>

        <!-- Google Sign Up -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGoogleSignUp"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Continue with Google"
            android:textSize="16sp"
            android:textColor="#424242"
            android:textAllCaps="false"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:strokeColor="#E0E0E0"
            app:strokeWidth="1dp"
            app:cornerRadius="12dp"
            app:icon="@drawable/google_icon"
            app:iconTint="@null"
            app:iconGravity="start"
            app:iconPadding="12dp"
            app:iconSize="24dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginBottom="20dp"/>

